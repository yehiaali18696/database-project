        <th>id_articles</th>
        <th>total_price</th>
        <th>paymet_method</th>
        <th>invoice_date</th>

    </tr>
    @foreach (var item in Model.listInvoice)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.idcustomer</td>
            <td>@item.idarticles</td>
            <td>@item.totalprice</td>
            <td>@item.paymentmethod</td>
            <td>@item.invoicedate</td>

        </tr>

    }

