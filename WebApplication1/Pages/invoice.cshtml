<form method="POST">
    <label for="id_customer">id_customer:</label><br>
    <input type="text" id="id_customer" name="id_customer"><br>

    <label for="id_articles">id_articles:</label><br>
    <input type="text" id="id_articles" name="id_articles"><br>

    <label for="total_price">total_price:</label><br>
    <input type="text" id="total_price" name="total_price"><br>

    <label for="payment_method">payment_method:</label><br>
    <input type="text" id="payment_method" name="payment_method"><br>
   
    <label for="invoice_date">invoice_date:</label><br>
